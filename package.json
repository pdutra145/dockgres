{
  "name": "dockgres",
  "version": "1.0.1",
  "description": "nodejs CLI app that automates the creation of postgresql docker containers",
  "main": "./build/index.js",
  "type": "module",
  "scripts": {
    "start:dev": "npx nodemon",
    "start": "node ./build/index.js set",
    "build": "npx tsc",
    "build:docker": "docker-compose -f ./docker/docker-compose.dev.yml up -d --build",
    "docker:util": "docker-compose -f ./docker/docker-compose.dev.yml run util start",
    "docker:dev": "docker-compose -f ./docker/docker-compose.dev.yml run dev bash"
  },
  "author": "Pedro Dutra",
  "license": "ISC",
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^10.0.1",
    "inquirer": "^9.1.5"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.3",
    "@types/node": "^18.15.12",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
